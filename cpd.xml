<?xml version="1.0" encoding="UTF-8"?>
<analysis>
    <!-- Copy-Paste Detection (CPD) Configuration -->
    <cpd>
        <minimum-tokens>100</minimum-tokens>
        <files>
            <file>${basedir}/src</file>
        </files>
    </cpd>

    <!-- CheckStyle Configuration -->
    <checkstyle>
        <file>${basedir}/checkstyle.xml</file>
        <!-- Add more CheckStyle configurations as needed -->
    </checkstyle>

    <!-- FindBugs Configuration -->
    <findbugs>
        <file>${basedir}/findbugs.xml</file>
        <!-- Add more FindBugs configurations as needed -->
    </findbugs>

    <!-- PMD Configuration -->
    <pmd>
        <file>${basedir}/pmd.xml</file>
        <!-- Add more PMD configurations as needed -->
    </pmd>
</analysis>
